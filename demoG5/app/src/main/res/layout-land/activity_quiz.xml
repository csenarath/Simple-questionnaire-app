            <TextView
                android:id="@+id/txta_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtq_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="මගේ දකුණු පස වාඩිවී සිටින්නේ මගේ සීයාගේ ලොකු දුවය. මගේ වම්පස වාඩිවී සිටින්නේ මගේ පුංචි අම්මා ය. මගේ පුංචි අම්මා සීයාගේ කව්ද?" />

            <RadioGroup
                android:id="@+id/rdgrp_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rdgrp_5_ans_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="a.	බිරිඳ " />

                <RadioButton
                    android:id="@+id/rdgrp_5_ans_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" b.	ලොකු දුව " />

                <RadioButton
                    android:id="@+id/rdgrp_5_ans_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="c.	පොඩි දුව  " />

            </RadioGroup>
            <TextView
                android:id="@+id/txta_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0E68C"
                android:text="Button" />

            <Button
                android:id="@+id/btnResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0E68C"
                android:text="Button" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="350dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


